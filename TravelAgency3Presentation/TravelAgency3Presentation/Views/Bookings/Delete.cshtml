@model TravelAgency3Presentation.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this booking?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Booking #@Model.Id</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@ViewBag.LocationName</dd>

                    <dt class="col-sm-4">User</dt>
                    <dd class="col-sm-8">@Model.CustomerName</dd>

                    <dt class="col-sm-4">Check-in Date</dt>
                    <dd class="col-sm-8">@Model.CheckInDate.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Check-out Date</dt>
                    <dd class="col-sm-8">@Model.CheckOutDate.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Guest Count</dt>
                    <dd class="col-sm-8">@Model.NumberOfGuests</dd>

                    <dt class="col-sm-4">Total Price</dt>
                    <dd class="col-sm-8">$@Model.TotalPrice</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                </dl>
            </div>
        </div>

        <form asp-controller="Bookings" asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>