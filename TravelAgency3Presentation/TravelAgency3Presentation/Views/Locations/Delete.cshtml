@model TravelAgency3Presentation.Models.Location

@{
    ViewData["Title"] = "Delete Location";
}

<h1>Delete Location</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this location?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Country</h6>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Price per night:</strong> $@Model.PricePerNight</p>
                <p class="card-text"><strong>Popular:</strong> @(Model.IsPopular ? "Yes" : "No")</p>
                <p class="card-text"><small class="text-muted">Created on @Model.CreatedAt.ToString("MMM dd, yyyy")</small></p>
            </div>
        </div>

        <form asp-controller="Locations" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>