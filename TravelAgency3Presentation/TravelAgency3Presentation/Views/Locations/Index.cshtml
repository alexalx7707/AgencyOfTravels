@model IEnumerable<Location>
@{
    ViewData["Title"] = "Destinations";
}

<div class="container">
    <h1 class="my-4">Our Destinations</h1>

    <div class="mb-3">
        <a asp-controller="Locations" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Destination</a>
    </div>

    <div class="row">
        @foreach (var location in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(location.ImageUrl) ? "/images/default-location.jpg" : location.ImageUrl)"
                         class="card-img-top" alt="@location.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@location.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@location.Country</h6>
                        <p class="card-text">@(location.Description?.Length > 100 ? location.Description.Substring(0, 97) + "..." : location.Description)</p>
                        <p class="card-text text-primary">From $@location.PricePerNight per night</p>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@location.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>